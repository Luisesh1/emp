
<div class="card-panel teal lighten-2 ">
  <h1 class="center-align">Emprendimientos</h1>
</div>
<div class=container>
  <div class ="row">
    <div class="col s12">
    <% @activities.each do |activity| %>
      <div class="col s12 m6 l6">
          <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <%=image_tag(activity.cover.url)%>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= activity.title %><i class="material-icons right">more_vert</i></span>
          <div class="card-action">
              <%=link_to "Ver Emprendimiento", activity,class:"waves-effect waves-light btn"%>
              <%= link_to edit_activity_path(activity),class:"waves-effect waves-light btn" do %>
                <i class="material-icons left">cloud</i> Editar
              <%end%>
               <%= link_to activity, method: :delete,class:"waves-effect waves-light btn" do %>
                <i class="material-icons left">cloud</i> Eliminar
              <%end%>
          </div>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= activity.title %><i class="material-icons right">close</i></span>
          <p><%= activity.description %></p>
        </div>
      </div>  
        </div>
      <% end %>
</div>
  </div>
  </div>
<br>
<%if user_signed_in?%>
 <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <%= link_to "#modal1",class:"modal-trigger btn-floating btn-large waves-effect waves-light red" do%>
    <i class="material-icons">add</i>
  <%end%>
 </div>


  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Nuevo emprendimiento</h4>
      <%=render "form"%>
    </div>
  </div>

<%end%>